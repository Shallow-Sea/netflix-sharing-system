# =================================
# 奈飞共享系统环境变量配置
# =================================

# 服务器配置
PORT=5000
NODE_ENV=development
# 生产环境设置为: NODE_ENV=production

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/netflix_sharing_db
# 生产环境示例: mongodb+srv://username:password@cluster.mongodb.net/netflix_sharing_db

# JWT安全配置 - 必须设置强密钥 (64位十六进制字符串)
JWT_SECRET=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456
JWT_EXPIRES_IN=24h
# 建议生产环境使用更短的过期时间

# 数据加密密钥 - 用于敏感数据加密 (64位十六进制字符串)
DATA_ENCRYPTION_KEY=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# 用于分享页面等敏感数据的加密

# API接口加密密钥 - 用于请求/响应加密 (64位十六进制字符串)
API_ENCRYPTION_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
# 用于API数据传输加密

# 邮件服务配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# 安全配置
ALLOW_ADMIN_REGISTRATION=false
# 生产环境必须设置为false，防止恶意注册管理员

# 生产环境域名配置
FRONTEND_URL=https://catnf.dmid.cc
API_URL=https://catapi.dmid.cc
CORS_ORIGINS=https://catnf.dmid.cc

# 密钥生成提示:
# 可以使用以下命令生成安全的密钥:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" 