# =================================
# 生产环境配置 - 宝塔面板部署
# =================================

# 服务器配置
PORT=3000
NODE_ENV=production

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/netflix_sharing_db

# JWT安全配置 - 部署时必须重新生成
# 使用命令生成: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=请在部署时生成新的64位密钥
JWT_EXPIRES_IN=24h

# 数据加密密钥 - 部署时必须重新生成
DATA_ENCRYPTION_KEY=请在部署时生成新的64位密钥
API_ENCRYPTION_KEY=请在部署时生成新的64位密钥

# 安全配置
ALLOW_ADMIN_REGISTRATION=false

# 域名配置
FRONTEND_URL=https://catnf.dmid.cc
API_URL=https://catapi.dmid.cc
CORS_ORIGINS=https://catnf.dmid.cc

# 邮件配置（可选）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# 日志配置
LOG_LEVEL=info

# 备份配置
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d